<!-- new-product.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Product</title>
</head>
<body>
    <h1>Add New Product</h1>
    <form action="/products" method="POST">
        <label for="asin">ASIN:</label>
        <input type="text" id="asin" name="asin" required><br><br>

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required><br><br>

        <label for="imgUrl">Image URL:</label>
        <input type="url" id="imgUrl" name="imgUrl" required><br><br>

        <label for="stars">Stars:</label>
        <input type="number" id="stars" name="stars" step="0.1" min="0" max="5" required><br><br>

        <label for="reviews">Reviews:</label>
        <input type="number" id="reviews" name="reviews" required><br><br>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" step="0.01" min="0" required><br><br>

        <label for="categoryName">Category Name:</label>
        <input type="text" id="categoryName" name="categoryName"><br><br>

        <label for="isBestSeller">Is Best Seller:</label>
        <input type="text" id="isBestSeller" name="isBestSeller"><br><br>

        <label for="boughtInLastMonth">Bought In Last Month:</label>
        <input type="number" id="boughtInLastMonth" name="boughtInLastMonth"><br><br>

        <button type="submit">Add Product</button>
    </form>
</body>
</html>
